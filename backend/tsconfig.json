{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": ".build",
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules"]
}
